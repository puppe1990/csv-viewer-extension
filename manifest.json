{
  "manifest_version": 3,
  "name": "CSV Viewer & Editor",
  "version": "1.0.0",
  "description": "Visualize e edite arquivos CSV com funcionalidades tipo Excel, incluindo soma de colunas e formatação de moeda",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
